<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:app="http://schemas.android.com/apk/res-auto"
	android:id="@+id/activity_main"
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:paddingBottom="@dimen/activity_vertical_margin"
	android:paddingLeft="@dimen/activity_horizontal_margin"
	android:paddingRight="@dimen/activity_horizontal_margin"
	android:paddingTop="@dimen/activity_vertical_margin"
	tools:context="com.winterschool.mobilewinterschool.view.LoginActivity">

	<LinearLayout
		android:orientation="vertical"
		android:layout_width="match_parent"
		android:layout_height="150dp"
		android:gravity="center"
		android:layout_centerVertical="true"
		android:layout_centerHorizontal="true"
		android:weightSum="2"
		android:id="@+id/linearLayout">

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:orientation="horizontal"
			android:layout_weight="1">

			<ImageView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				app:srcCompat="@drawable/ic_account_box_black_24dp"
				android:id="@+id/imageView"
				android:layout_gravity="center" />

			<EditText
				android:layout_width="179dp"
				android:layout_height="wrap_content"
				android:inputType="textPersonName"
				android:hint="Name"
				android:ems="10"
				android:id="@+id/activity_login_edittext_login"
				android:ellipsize="start"
				android:layout_gravity="center"
				android:gravity="center"
				android:maxLines="1"
				android:layout_weight="0.90" />

			<ImageButton
				android:background="@drawable/ic_clear_black_24dp"
				android:layout_gravity="center"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:id="@+id/activivty_login_image_button_delete_login" />

		</LinearLayout>

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:orientation="horizontal"
			android:layout_weight="1">

			<ImageView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				app:srcCompat="@drawable/ic_vpn_key_black_24dp"
				android:id="@+id/activity_login_image_password"
				android:layout_gravity="center" />

			<EditText
				android:layout_width="179dp"
				android:layout_height="wrap_content"
				android:inputType="textPassword"
				android:hint="Password"
				android:ems="10"
				android:id="@+id/activity_login_edittext_password"
				android:ellipsize="start"
				android:layout_gravity="center"
				android:gravity="center"
				android:maxLines="1"
				android:layout_weight="0.90" />

			<ImageButton
				android:background="@drawable/ic_clear_black_24dp"
				android:layout_gravity="center"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:id="@+id/activivty_login_image_button_delete_pass" />

		</LinearLayout>


	</LinearLayout>

	<Button
		android:text="Login"
		android:layout_width="150dp"
		android:layout_height="wrap_content"
		android:layout_below="@+id/linearLayout"
		android:layout_centerHorizontal="true"
		android:id="@+id/activity_login_button" />

</RelativeLayout>
